<div class="container" id="shopping-cart">
	<table id="cart" class="table table-hover table-condensed">
		<thead>
			<tr>
				<th style="width:50%">Product</th>
				<th style="width:10%">Price</th>
				<th style="width:8%">Quantity</th>
				<th style="width:22%" class="text-center">Subtotal</th>
				<th style="width:10%"></th>
			</tr>
		</thead>
		<tbody>
			{{#each cartItems}}
			<tr>
				<td data-th="Product">
					<div class="row">
						<div class="col-sm-2 hidden-xs">
							<img src="images/items/{{this.cuisineImage}}" alt="..." class="img-responsive"/>
						</div>
						<div class="col-sm-10">
							<h4 class="nomargin">{{this.cuisineName}}</h4>
							<p>Quis aute iure reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Lorem ipsum dolor sit amet.</p>
						</div>
					</div>
				</td>
				<td data-th="Price">${{this.cuisinePrice}}</td>
				<td data-th="Quantity">
					<input type="number" class="form-control text-center" value="{{this.quantity}}" min="1">
				</td>
				<td data-th="Subtotal" class="text-center">${{this.itemTotal}}</td>
				<td class="actions" data-th="">
					<button class="btn btn-info btn-sm">
						<i class="fa fa-refresh"></i>
					</button>
					<button class="btn btn-danger btn-delete-item-from-cart btn-sm" data-cuisine-name="{{this.cuisineName}}" data-cuisine-id="{{this.cuisineId}}">
						<i class="fa fa-trash-o"></i>
					</button>								
				</td>
			</tr>
			{{/each}}
		</tbody>
		<tfoot>
			<tr class="visible-xs">
				<td class="text-center"><strong>Total ${{cartTotal}}</strong></td>
			</tr>
			<tr>
				<td><a href="#" class="btn btn-warning continue-shopping"><i class="fa fa-angle-left"></i> Continue Shopping</a></td>
				<td colspan="2" class="hidden-xs"></td>
				<td class="hidden-xs text-center"><strong>Total ${{cartTotal}}</strong></td>
				<td><a href="#" class="btn btn-success btn-block">Checkout <i class="fa fa-angle-right"></i></a></td>
			</tr>
		</tfoot>
	</table>
</div>


<div class="container">
    <div class="row">
        <div class='col-sm-6'>
            <div class="form-group">
                <div class='input-group date' id='datetimepicker1'>
                    <input type='text' class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>